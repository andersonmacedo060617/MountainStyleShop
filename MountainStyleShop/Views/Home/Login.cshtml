@model MountainStyleShop.ModelNH.Model.Usuario
@{
    ViewBag.Title = "Login Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Acesso para Clientes</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Logar", "Usuario", FormMethod.Post))
                    {
                        <fieldset>
                            @if (@TempData["MSG_FalhaAcesso"] != null)
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    @TempData["MSG_FalhaAcesso"]
                                </div>
                            }
                            <div class="form-group">
                                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login" } })
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @placeholder = "Senha", @type = "password" } })
                            </div>
                            @Html.Hidden("ReturnUrl", (String)ViewBag.ReturnUrl)
                            @*<div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>*@
                            @*<div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" />Lembrar nesta maquina(Não Recomendado)
                                    </label>
                                </div>*@
                            <!-- Change this to a button or input when using this as a form -->
                            <input type="submit" value="Login" class="btn btn-lg btn-success btn-block" />
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
