@model MountainStyleShop.ModelNH.Model.NotaDeCompra

@{
    ViewBag.Title = "Alterar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Alterar</h2>

@using (Html.BeginForm("Gravar", "NotaDeCompra", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>NotaDeCompra</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Fornecedor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Fornecedor.Id, (SelectList)ViewBag.lstFornecedores, "Selecione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Fornecedor.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataDaCompra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataDaCompra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataDaCompra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataDeEntrega, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataDeEntrega, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataDeEntrega, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gravar" class="btn btn-success" />

                <a class="btn btn-info" href="@Url.Action("Index")" aria-label="Voltar">
                    Voltar
                </a>
            </div>
        </div>
    </div>
}


