@model MountainStyleShop.ModelNH.Model.NotaDeCompraFornecedor

    @{
        ViewBag.Title = "Novo";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Incluir Produto</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Gravar", "NotaDeCompra", FormMethod.Post))
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Nota de Pedido</h4>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(model => model.Fornecedor, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.Fornecedor.Id, (SelectList)ViewBag.lstFornecedores, "Selecione...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Fornecedor.Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.DataDaCompra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.DataDaCompra, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataDaCompra, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataEntregaPrevista, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.DataEntregaPrevista, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataEntregaPrevista, "", new { @class = "text-danger" })
                    </div>
                </div>

                <input type="submit" value="Salvar" class="btn btn-success" />
                <a class="btn btn-info" href="@Url.Action("Index")" aria-label="Voltar">
                    Voltar
                </a>
            </div>
        }

    </div>
</div>