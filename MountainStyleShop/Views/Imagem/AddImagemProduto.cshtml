@model MountainStyleShop.ModelNH.Model.Imagem

@{
    ViewBag.Title = "AddImagemProduto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



    @using (Html.BeginForm("Gravar", "Imagem", FormMethod.Post,
                                                                  new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Incluir Imagem - @ViewBag.Produto.Nome</h3>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.Hidden("Imagem.Produto.Id", (int)ViewBag.Produto.Id);

                    <div class="form-group">
                        @Html.LabelFor(model => model.Caminho, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            <input type="file" name="file" id="file" class="form-control" />
                            @Html.HiddenFor(model => model.Caminho)
                            @Html.ValidationMessageFor(model => model.Caminho)
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a class="btn btn-info" href="@Url.Action("Index", "Produto")">Voltar</a>
                            <input type="submit" value="Gravar" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
        
