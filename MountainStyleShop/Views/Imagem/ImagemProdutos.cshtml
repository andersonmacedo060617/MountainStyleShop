@model IEnumerable<MountainStyleShop.ModelNH.Model.Imagem>

@{
    ViewBag.Title = "ImagemProdutos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-3 col-lg-3 col-md-3">
        <div class="thumbnail">
            <img src="@Model.First().Produto.ImagemPrincipal" width="350" height="150">
        </div>
    </div>
    @foreach (var Imagem in Model)
    {
        <div class="col-sm-3 col-lg-3 col-md-3">
            <div class="thumbnail">
                <img src="@Imagem.Caminho" width="350" height="150">
            </div>
        </div>
    }
    
</div>
<a class="btn btn-info" href="@Url.Action("Visualizar", "Produto", new { id = Model.First().Produto.Id })">Voltar</a>