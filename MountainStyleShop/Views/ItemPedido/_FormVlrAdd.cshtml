@model MountainStyleShop.ModelNH.Model.ValorAddNotaCompraPedido

@using (Html.BeginForm("GravaVlrAdicional", "ItemPedido", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(mode => Model.ItemNotaCompraFornecedor.Id)
        
        <div class="form-group">
            <label class="control-label col-md-3">
                Nome do Valor
            </label>
            
            <div class="col-md-5">
                @Html.TextBoxFor(model => model.NomeValor, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NomeValor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Operador</label>
            <div class="col-md-5">
                @Html.EnumDropDownListFor(model=>model.OperadorValorAdicional, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OperadorValorAdicional, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Percentual, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Percentual, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Percentual, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Incluir" class="btn btn-success" />
            </div>
        </div>
    </div>
}
