
@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" type="text/css" href="~/Content/estiloIndex.css">



<div class="row">
    <div class="col-md-3">
        <p class="lead">Produtos por Categorias </p>
        @Html.Action("MenuCategorias", "Componentes")
    </div>
    <div class="col-md-9" >
        <div class="row">

            @foreach (var produto in (IList<MountainStyleShop.ModelNH.Model.Produto>)ViewBag.Produtos)
            {

                <div class="col-sm-3 col-lg-3 col-md-3">
                    <div class="thumbnail">
                        <img src="@produto.Imagem" alt="@produto.Nome" width="350" height="150">
                        <div class="caption">
                            <h4>
                                <b><a href="@Url.Action("Visualizar", "Produto",new { id = produto.Id })">@produto.Nome</a></b>
                            </h4>
                            <h4>
                                R$ @produto.Valor.ToString()
                            </h4>
                            <p>@produto.Descricao</p>
                        </div>
                        <div class="ratings">
                            <p class="pull-right">15 Avaliações</p>
                            <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

